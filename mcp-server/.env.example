# Qdrant RAG MCP Server Configuration
# Copy this file to .env and fill in your values

# ============================================
# API Configuration
# ============================================
# URL of your Qdrant Search API
API_URL=http://localhost:8001

# Optional: API key for authentication
# Leave empty if no authentication required
API_KEY=

# ============================================
# Qdrant Configuration (Optional Overrides)
# ============================================
# If not set, API will use its own defaults

# Qdrant host URL
# QDRANT_HOST=https://your-qdrant-cloud.io

# Qdrant API key
# QDRANT_API_KEY=your-qdrant-api-key

# Collection name
QDRANT_COLLECTION=content

# ============================================
# Ollama Configuration (Optional Overrides)
# ============================================
# If not set, API will use its own defaults

# Ollama URL (local or cloud)
# OLLAMA_URL=http://localhost:11434

# Ollama API key (only for Ollama Cloud)
# Leave empty for local Ollama
# OLLAMA_API_KEY=

# ============================================
# Embedding Configuration
# ============================================
EMBEDDING_MODEL=bge-m3
EMBEDDING_DIMENSIONS=1024

# ============================================
# Default Settings
# ============================================
# These defaults are used by MCP server when LLM doesn't specify values.
# LLM can override these on a per-request basis.
# Priority: LLM override > .env defaults > hardcoded fallbacks

# Use production Qdrant instance
USE_PRODUCTION=true

# Default context window size (pages before/after match)
# Range: 0-11 (total pages = window*2 + 1)
DEFAULT_CONTEXT_WINDOW=5

# Default result limit per query
# Recommended: 1-5 for focused results
DEFAULT_LIMIT=1
